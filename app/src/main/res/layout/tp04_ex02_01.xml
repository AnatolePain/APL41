<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/centre"

        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_centerInParent="true"
        android:background="@android:color/holo_blue_bright"
        />

    <View
        android:id="@+id/carré_droit"

        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_green_light"

        android:layout_toRightOf="@+id/centre"
        android:layout_alignTop="@+id/centre"
        android:layout_alignBottom="@+id/centre"
        />

    <View
        android:id="@+id/carré_gauche"

        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_green_light"

        android:layout_toLeftOf="@+id/centre"
        android:layout_alignTop="@+id/centre"
        android:layout_alignBottom="@+id/centre"
        />

    <View
        android:id="@+id/carré_haut"

        android:layout_width="wrap_content"
        android:layout_height="100dp"

        android:background="@android:color/holo_green_light"

        android:layout_above="@+id/centre"
        android:layout_alignLeft="@+id/centre"
        android:layout_alignRight="@+id/centre"
        />

    <View
        android:id="@+id/carré_bas"

        android:layout_width="wrap_content"
        android:layout_height="100dp"

        android:background="@android:color/holo_green_light"

        android:layout_below="@+id/centre"
        android:layout_alignLeft="@+id/centre"
        android:layout_alignRight="@+id/centre"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_blue_dark"

        android:layout_toEndOf="@+id/centre"
        android:layout_toRightOf="@+id/centre"
        android:layout_alignRight="@+id/carré_droit"
        android:layout_alignBottom="@+id/carré_bas"
        android:layout_below="@+id/centre"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_blue_dark"

        android:layout_toLeftOf="@+id/centre"
        android:layout_alignLeft="@+id/carré_gauche"
        android:layout_below="@+id/centre"
        android:layout_alignBottom="@+id/carré_bas"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_blue_dark"

        android:layout_toStartOf="@+id/centre"
        android:layout_toLeftOf="@+id/centre"
        android:layout_above="@+id/centre"
        android:layout_alignLeft="@+id/carré_gauche"
        android:layout_alignTop="@+id/carré_haut"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_blue_dark"

        android:layout_toRightOf="@+id/centre"
        android:layout_above="@+id/centre"
        android:layout_alignRight="@+id/carré_droit"
        android:layout_alignTop="@+id/carré_haut"
        />




</RelativeLayout>